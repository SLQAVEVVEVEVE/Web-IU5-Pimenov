<h1 class="page-title">Типы балок</h1>

<div class="search-wrap">
  <form method="get" action="<%= beam_types_path %>">
    <input class="search" type="text" name="search"
           placeholder="Поиск по названию, материалу, норме, числам..."
           value="<%= @q %>">
  </form>
</div>

<div class="grid">
  <% @services.each do |s| %>
    <article class="card">
      <img class="thumb" src="<%= image_url_for(s.image_key) %>" alt="Изображение: <%= s.name %>">
      <div>
        <h3><%= s.name %></h3>
        <div class="meta">Материал: <%= s.material %> · Модуль упругости: <%= s.e_gpa %> ГПа · Норма: <%= s.norm %></div>
        <a class="btn" href="<%= beam_type_path(s.id) %>">Подробнее</a>
      </div>
    </article>
  <% end %>
</div>


<% if @services.empty? %>
  <p style="text-align:center;opacity:.7;margin-top:16px">Ничего не найдено по запросу “<%= @q %>”.</p>
<% end %>

<%= link_to deflection_request_path(@order[:id]), class: "fab-cart", title: "Открыть заявку" do %>
  <%= image_tag "cart.png", alt: "", class: "fab-cart__icon" %>
  <span class="fab-cart__badge"><%= @basket_count %></span>
<% end %>