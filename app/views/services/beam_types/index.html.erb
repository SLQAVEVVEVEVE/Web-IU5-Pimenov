<h1>Типы балок</h1>

<form action="<%= beam_types_path %>" method="get" class="search-bar">
    <input type="text"
           name="q"
           value="<%= params[:q] %>"
           placeholder="Поиск…"
           class="input input--search" />
    <button class="btn btn--primary">Найти</button>
</form>

<div class="grid">
  <% @beam_types.each do |s| %>
    <article class="card">
      <img class="thumb"
           src="<%= image_url_for(s.image_key) %>"
           alt="Изображение: <%= s.name %>">
      <div>
        <h3><%= s.name %></h3>
        <p>Материал: <%= s.material %></p>
        <p>Модуль E: <%= s.elasticity_gpa %> ГПа · Норма: <%= s.norm %></p>
        <%= link_to "Подробнее", beam_type_path(s), class: "btn btn--primary btn--sm" %>
        <%= button_to "В корзину",
            add_to_deflection_request_path(beam_type_id: s.id),
            method: :post,
            class: "btn btn--outline btn--sm",
            form: { style: "display:inline" } %>
      </div>
    </article>
  <% end %>
</div>
