<h1 class="page-title"><%= @service.name %></h1>

<article class="card card-lg" style="margin: 0 auto; max-width: 920px;">
  <% if @service.image_key.present? %>
    <img class="thumb-lg" src="<%= image_url_for(@service.image_key) %>" alt="Изображение: <%= @service.name %>">
  <% else %>
    <div class="thumb-lg" aria-hidden="true"></div>
  <% end %>

  <div>
    <p class="meta">
      Материал: <%= @service.material %> · Модуль упругости: <%= @service.e_gpa %> ГПа · Норма: <%= @service.norm %>
    </p>
    <p style="font-size:var(--body);line-height:var(--body-lh)">
      <%= @service.description %>
    </p>
  </div>
</article>